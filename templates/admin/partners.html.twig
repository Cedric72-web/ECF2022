{% extends 'base.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block body %}
    <a href="{{ path('admin_index') }}" class="btn btn-success my-3">Retour au panel d'administration</a>
    <h1 class="p-2 text-center fw-bold">Liste des salles</h1>
    <a href="{{ path('admin_nouvelle_salle') }}" class="btn btn-primary my-3">Créer une nouvelle salle</a>
    <div class="flex-nowrap">
        {% for partner in partners %}
            <div class="card col-md-4 shadow py-3 mb-5 bg-body rounded">
                {# <div class="row g-0"> #}
                    <div class="col-md-12">
                        <div class="card-body">
                            <h5 class="card-title">{{ partner.name }}</h5>
                            <p class="card-text">{{ partner.email }}</p>
                            <p class="card-text">
                                <small class="">
                                    {% if partner.isActivate == 0 %}
                                        <p class="badge text-bg-danger">Non activée</p>
                                    {% else %}
                                        <p class="badge text-bg-success">Activée</p>
                                    {% endif %}
                                </small>
                            </p>
                        </div>
                        <div class="card-footer d-flex justify-content-around">
                            <a href="{{ path('admin_modifier_salle', {'id': partner.id}) }}" class="btn btn-warning">Modifier</a>
                            <a href="{{ path('admin_supprimer_salle', {'id': partner.id}) }}" onclick="if(!confirm('Êtes vous sûr de vouloir supprimer {{ partner.name }} ?')) { return false; }" class="btn btn-danger">Supprimer</a>
                            <a href="#" class="btn btn-success">Voir la fiche</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
