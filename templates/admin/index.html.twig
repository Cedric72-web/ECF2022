                <a href="{{ path('admin_salles') }}" class="btn btn-primary text-end border-dark bg-dark">Voir toutes les salles</a>
            </div>
        </div>
    </div>
    <div class="card border-success mb-4 col-lg-8 mx-auto">
        <div class="card-body">
            <h5 class="card-title">Modules</h5>
            <p class="card-text">Il y a actuellement {{ modules }} module(s)</p>
            <div class="card-footer text-end bg-transparent border-success">
                <a href="{{ path('admin_modules') }}" class="btn btn-primary text-end border-dark bg-dark">Voir tous les modules</a>
            </div>
        </div>
    </div>
{% endblock %}