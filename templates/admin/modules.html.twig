{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block body %}
    <a href="{{ path('admin_index') }}" class="btn btn-success my-3">Retour au panel d'administration</a>
    <h1 class="p-2 text-center fw-bold">Liste des moduless</h1>
    <a href="{{ path('admin_nouveau_module') }}" class="btn btn-primary my-3">Créer un nouveau module</a>
    <div class="flex-nowrap">
        {% for module in modules %}
            <div class="card col-md-4 shadow py-3 mb-5 bg-body rounded">
                {# <div class="row g-0"> #}
                    <div class="col-md-12">
                        <div class="card-body">
                            <h5 class="card-title">{{ module.name }}</h5>
                            <p class="card-text">
                                <small class="">
                                    {% if module.isActivate == 0 %}
                                        <p class="badge text-bg-danger">Non activé</p>
                                    {% else %}
                                        <p class="badge text-bg-success">Activé</p>
                                    {% endif %}
                                </small>
                            </p>
                        </div>
                        <div class="card-footer d-flex justify-content-around">
                            {# <a href="{{ path('admin_modifier_module', {'id': module.id}) }}" class="btn btn-warning">Modifier</a> #}
                            <a href="{{ path('admin_supprimer_module', {'id': module.id}) }}" onclick="if(!confirm('Êtes vous sûr de vouloir supprimer {{ module.name }} ?')) { return false; }" class="btn btn-danger">Supprimer</a>
                            <a href="#" class="btn btn-success">Voir la fiche</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
